


        {{>nav-block}}
        <div class="container">
            <div class="row">
              <div class="col m12" id="article area">
                 {{#each articles}}
                    <div class="row">
                        <div class="col s12 m6">
                            <div class="card blue-grey darken-1">
                                <div class="card-content white-text">
                                    <span class="card-title"> {{ title }}</span>
                                    <img src="{{ imageSrc }}">
                                    <p>{{ description }}</p>
                                </div>
                                <div class="card-action">
                                    <a href="{{link}}" data-id="{{ _id }}" target="_blank">Read the Article</a>
                                    <a class="waves-effect waves-light btn save-article" data-id="{{ _id }}" ><i class="material-icons left">save</i>Save Article</a>
                                </div>
                            </div>
                        </div>
                    </div>
                 {{/each}}
                 
              </div>
          </div>
    </div>